
root=true

[**.js]
indent_style = space
indent_size = 2
end_with_newline = true
jslint_happy = true
space_after_anon_function = true
brace_style = expand,
break_chained_methods = true
wrap_line_length = 120,
operator_position = after-newline

[**.json]
indent_style = space
indent_size = 4

[**.jsx]
e4x = true
indent_style = space
indent_size = 4

[**.css]
indent_style = space
indent_size = 4

[**.html]
indent_style = space
indent_size = 4
max_char = 78
brace_style = expandk

